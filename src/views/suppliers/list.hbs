<div class="container px-5">
    <div class="row gx-5 justify-content-center">
        <div class="col-lg-6">
            <div class="text-center my-5">
                <h1 class="display-5 fw-bolder .text-dark-emphasis mb-2">Proveedores disponibles</h1>
            </div>
        </div>
    </div>
</div>

<div class="container p-0">
    <div class="row">
            <div class="col-md-11 mx-auto">
                <table class="table table-striped table-bordered table-hover text-center align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Tel√©fono</th>
                            <th>Correo</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each suppliers}}
                            <tr class="bg-light">
                                <td>{{id}}</td>
                                <td>{{nombre}}</td>
                                <td>{{telefono}}</td>
                                <td>{{correo}}</td>
                                <td><a href="/suppliers/edit/{{id}}" class="btn btn-secondary">Editar</a> <a href="/suppliers/delete/{{id}}" class="btn btn-danger">Eliminar</a></td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
    </div>
</div>

<div class="container p-4">
    <div class="row">
        <div class="col-md-2 mx-auto text-center">
            <a href="/suppliers/add">
                <button class="btn btn-success">Nuevo proveedor</button>
            </a>
        </div>
    </div>
</div>