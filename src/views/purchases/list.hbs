<div class="container px-5">
    <div class="row gx-5 justify-content-center">
        <div class="col-lg-6">
            <div class="text-center my-5">
                <h1 class="display-5 fw-bolder .text-dark-emphasis mb-2">Lista de compras</h1>
            </div>
        </div>
    </div>
</div>

<div class="container p-0">
    <div class="row">
        <div class="col-md-11 mx-auto">
            <div class="table-container">
                <table class="table table-striped table-bordered table-hover text-center align-middle">
                    <thead class="table-dark">
                        <tr>
                        <th>ID</th>
                        <th>Usuario encargado</th>
                        <th>Proveedor</th>
                        <th>Fecha</th>
                        <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each purchases}}
                        <tr class="bg-light">
                        <td>{{id}}</td>
                        <td>{{usuario}}</td>
                        <td>{{proveedor}}</td>
                        <td>{{formatDate fecha}}</td>
                        <td>
                            <a href="/purchases/details/{{id}}" class="btn btn-primary">Ver detalles</a>
                        </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="container p-4">
    <div class="row">
        <div class="col-md-2 mx-auto text-center">
            <a href="/purchases/add">
                <button class="btn btn-success">Nueva compra</button>
            </a>
        </div>
    </div>
</div>
