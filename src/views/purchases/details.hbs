<div class="container px-5">
    <div class="row gx-5 justify-content-center">
        <div class="col-lg-6">
            <div class="text-center my-5">
                <h1 class="display-5 fw-bolder .text-dark-emphasis mb-2">Detalles de la compra</h1>
            </div>
        </div>
    </div>
</div>

<div class="container p-0">
    <div class="row">
        <div class="col-md-11 mx-auto">
            <div class="card">
                <div class="card-body">
                    <h5><b>ID de compra:</b> {{compra.id}}</h5>
                    <h5><b>Usuario encargado:</b> {{compra.usuario}}</h5>
                    <h5><b>Proveedor:</b> {{compra.proveedor_nombre}}</h5>
                    <h5><b>Fecha de compra:</b> {{formatDate compra.fecha}}</h5>

                    <table class="table table-striped table-bordered table-hover text-center align-middle mt-4">
                        <thead class="table-dark">
                            <tr>
                                <th>Producto</th>
                                <th>Cantidad</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each detalles}}
                                <tr class="bg-light">
                                    <td>{{ nombreCubo }}</td>
                                    <td>{{ cantidad }}</td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto text-center d-flex justify-content-center">
            <a href="/purchases" class="btn btn-secondary mx-1">Volver</a>
            <a href="/purchases/download/{{compra.id}}" class="btn btn-primary mx-1">Descargar PDF</a>
        </div>
    </div>
</div>

